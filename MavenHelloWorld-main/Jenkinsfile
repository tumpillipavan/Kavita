pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/tumpillipavan/django-todo-cicd.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                   bat 'mvn test'
            }
        }
    }
}
